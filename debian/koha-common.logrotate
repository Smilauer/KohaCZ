# Rotate log files for all Koha instances.

/var/log/koha/*/*.log {
    rotate 5
    weekly
    missingok
    compress
    delaycompress
    notifempty
    sharedscripts
    prerotate
        /usr/sbin/koha-stop-zebra $(koha-list --enabled) > /dev/null
    endscript
    postrotate
        /etc/init.d/apache2 reload > /dev/null
        /usr/sbin/koha-start-zebra $(koha-list --enabled) > /dev/null
    endscript
}
